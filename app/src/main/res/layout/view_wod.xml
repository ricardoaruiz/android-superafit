<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="4dp"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/relative_layout_wod_item_header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:layout_marginRight="5dp">

        <LinearLayout
            android:id="@+id/inside_layout"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:srcCompat="@drawable/ic_alteres_preto"/>

            <TextView
                android:id="@+id/fragment_wod_list_movement_header_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Aquecimento - 3 rounds"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:paddingLeft="3dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="18dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/fragment_wod_list_movement_header_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="Description teste sksksk sjshkasjkjdfhkjshdkfhskfsdhfkshfskfhsksh kjdshf ksdjfh skdhfsk djfhsk fkjsdhf ksjfskdfhdkfhsdkf skjf hsd kfhsdkfhskfh"
            android:textSize="17dp"
            android:textColor="@color/black"
            android:paddingLeft="10dp"
            android:layout_below="@id/inside_layout"
            android:layout_marginRight="12dp"
            android:paddingBottom="10dp"/>

        <TextView
            android:id="@+id/fragment_wod_movements"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10 - Double Unders\n25 - Wall Ball\n05 - Pull Ups"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:paddingLeft="25dp"/>

    </LinearLayout>
</android.support.v7.widget.CardView>